
config defaults
	option syn_flood '1'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'
	option drop_invalid '1'

config zone
	option name 'eth0'
	option network 'eth0'
	option input 'ACCEPT'
	option forward 'ACCEPT'
	option output 'ACCEPT'

config zone
	option name 'vpn0'
	option network 'vpn0'
	option input 'ACCEPT'
	option forward 'ACCEPT'
	option output 'ACCEPT'
	option masq '1'

config forwarding
	option src 'eth0'
	option dest 'vpn0'
	option family 'ipv4'

config include
	option path '/etc/firewall.user'
